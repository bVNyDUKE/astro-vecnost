---
import img from "../images/vecna-logo-solo-100.png";
import { Image } from "@astrojs/image/components";
---

<nav
  class="sticky top-0 z-50 border-b bg-white sm:relative sm:z-0 sm:block sm:border-0 sm:bg-none"
>
  <div class="mb-10 hidden bg-white drop-shadow-md sm:block">
    <div class="container mx-auto items-center justify-between py-1.5 sm:flex">
      <a href="/">
        <div class="flex items-center justify-center">
          <Image
            src={img}
            alt="Vecnost logo"
            class="hover:pointer object-contain"
            style={{ width: "60px" }}
          />
          <div
            class="text-2xl font-semibold sm:text-2xl"
            style={{ lineHeight: "0.85" }}
          >
            Baza <br /> Podataka
          </div>
        </div>
      </a>
      <div
        class="flex basis-96 items-center justify-between space-x-2 text-xl font-semibold"
      >
        <a href="/pretraga">Pretraga</a>
        <a href="/statistika">Statistika</a>
        <a href="/indeks">Indeks</a>
        <a href="/mapa">Mapa</a>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-between p-5 text-gray-500 sm:hidden">
    <a href="/">Početna</a>
    <a href="/pretraga">Pretraga</a>
    <a href="/statistika">Statistika</a>
    <a href="/indeks">Indeks</a>
    <a href="/mapa">Mapa</a>
  </div>
</nav>
